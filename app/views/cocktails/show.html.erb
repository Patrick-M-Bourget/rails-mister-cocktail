<div class="container">
  <h1><%= @cocktail.name %></h1>

    <div class="cocktail-card">
      <h3><%= @cocktail.name %> </h3>
    </div>

    <p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>
    <p><%= link_to "Delete", destroy_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
      </p>
  <p><%= link_to "Back to list", cocktails_path %></p>
</div>
